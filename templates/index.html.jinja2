{% extends "layout.html.jinja2" %}
{% block navigation %}
    <li class="nav-item active">
        <a class="nav-link" href="{{ home }}">Home <span class="sr-only">(current)</span></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ clips }}">Clips</a>
    </li>
{% endblock %}
