#!/bin/bash

# Update the repos and install python3
sudo apt-get update
sudo apt-get install python3 python3-pip python3-venv -y

# Create a virtual environment
python3 -m venv picam-venv
source picam-env/bin/activate

# Install dependencies
pip3 install -r requirements.txt

echo "Setup complete. Don't forget o run `sudo raspi-config` to enable the camera module".
